<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.qrcodelogodemo.MainActivity">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view">
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_qr_content"
            android:hint="@string/edit_qr_content" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:text="Selected Logo:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        tools:ignore="HardcodedText" />

    <ImageView
        android:layout_width="180px"
        android:layout_height="180px"
        android:id="@+id/image_cropped_logo"
        android:background="@android:drawable/ic_menu_crop"
        tools:ignore="HardcodedText,PxUsage"
        android:contentDescription="Selected logo" />

    <Button
        android:text="Unset Logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_unset_logo"
        tools:ignore="HardcodedText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show QR Code"
        android:id="@+id/button_show_qrcode"
        style="@style/Widget.AppCompat.Button.Colored"
        tools:ignore="HardcodedText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/button_reset"
        tools:ignore="HardcodedText" />

</LinearLayout>
